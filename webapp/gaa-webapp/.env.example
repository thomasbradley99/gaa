# =============================================================================
# GAA WEBAPP - Environment Variables Template
# =============================================================================
# Copy this file to create environment-specific .env files:
# - backend/.env (for Express server)
# - frontend/.env.local (for Next.js app)
# - lambda/gaa-ai-analyzer/.env (for Lambda local testing)

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://gaaadmin:YourPassword@your-db-host.rds.amazonaws.com:5432/gaa_app

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d

# =============================================================================
# AWS S3 (Video Storage)
# =============================================================================
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_BUCKET_NAME=clann-gaa-videos-nov25

# =============================================================================
# AWS LAMBDA (AI Video Analysis)
# =============================================================================
AWS_LAMBDA_FUNCTION_NAME=gaa-ai-analyzer
LAMBDA_API_KEY=your-lambda-api-key-here

# =============================================================================
# GOOGLE GEMINI AI
# =============================================================================
# Get API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=4011
NODE_ENV=development
CORS_ORIGIN=http://localhost:4012,http://localhost:3013

# Backend API URL (for frontend and Lambda)
BACKEND_API_URL=http://localhost:4011
NEXT_PUBLIC_API_URL=http://localhost:4011

# =============================================================================
# DEBUG
# =============================================================================
DEBUG=false
